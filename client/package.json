{
  "name": "cheapforce-cloud-client",
  "version": "1.0.0",
  "description": "Cloud save storage client with GUI (Windows)",
  "main": "dist/electron-main.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:electron": "tsc && electron .",
    "build": "tsc",
    "start": "electron .",
    "package": "electron-builder --win"
  },
  "build": {
    "appId": "com.cheapforce.cloud",
    "productName": "CheapForce Cloud",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CheapForce Cloud"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "chokidar": "^4.0.1",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "fast-glob": "^3.3.2",
    "form-data": "^4.0.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.7.9",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
